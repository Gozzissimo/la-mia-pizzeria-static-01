@using Microsoft.AspNetCore.Html;

@{
    string sNome = "Nicolò";
    string sCognome = "Fantini";
}

@{
    int SommaNumero(int iNumero)
    {
        int iSomma = 0;
        for (int i = 0; i <= iNumero; i++)
        {
            iSomma += iNumero;
        }
        return iSomma;
    }

    int ContaLettera(string sFrase, char cLettera)
    {
        int iNumero = 0;
        foreach (char c in sFrase)
        {
            if (c == cLettera)
            {
                iNumero += 1;
            }
        }
        return iNumero;
    }

    List<int> ListaNumeri = new List<int>();
    Random rand = new Random();
    for (var i = 0; i < 20; i++)
    {
        int iNumeroCasuale = rand.Next(1, 91);
        ListaNumeri.Add(iNumeroCasuale);
    }
}

<main>
    <h2>@sNome @sCognome</h2>
    <p>La somma del numero 12 per 12 volte è @SommaNumero(12)</p>
    <p>Nella frase "nel mezzo del cammin di nostra vita", la lettera "a" è presente @ContaLettera("nel mezzo del cammin di nostra vita", 'a') volte </p>
    @foreach (int n in @ListaNumeri)
    {
        if (n >= 20 && n <= 70)
        {
            <div>@n</div>
        }
    }



